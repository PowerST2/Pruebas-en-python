% Entorno para mantener preguntas completas en una página
\RequirePackage{needspace}

% Comando para pregunta completa que no se divide entre páginas
\newcommand{\preguntacompleta}[3]{
\needspace{8\baselineskip}% Requiere al menos 8 líneas de espacio
\begin{samepage}
\item \import{#1}{#2}
\rpt{#3}
\end{samepage}
}

% Comando para títulos de sección que siempre aparecen en la parte superior de columna
\newcommand{\tituloseccion}[1]{
% Si estamos en la mitad inferior de una columna, forzar salto a la siguiente columna
% En formato twocolumn, cada columna tiene aproximadamente 0.45\textheight
% Pedimos 0.25\textheight para asegurar que esté en la parte superior
\needspace{0.25\textheight}
\begin{center}
\textbf{#1}
\end{center}
}

